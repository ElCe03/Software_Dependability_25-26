<?xml version="1.0" encoding="UTF-8"?>
<!-- Language: XML (FXML for JavaFX) -->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.GUI" prefHeight="700" prefWidth="900" style="-fx-background-color: #e6f7ff;">

    <!-- Main scrollable container -->
    <ScrollPane fitToWidth="true" style="-fx-background: #e6f7ff; -fx-border-color: transparent;"
                AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <!-- Title -->
            <Label text="Disease Predictor"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: #ff4d4d; -fx-padding: 10; -fx-background-radius: 5;"/>

            <!-- Symptoms and Profile Form -->
            <GridPane hgap="10" vgap="10" alignment="CENTER"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-border-color: #ff4d4d; -fx-border-radius: 10; -fx-border-width: 2;">
                <columnConstraints>
                    <ColumnConstraints prefWidth="250" halignment="RIGHT"/>
                    <ColumnConstraints prefWidth="200" halignment="LEFT"/>
                </columnConstraints>

                <!-- Symptoms Section -->
                <Label text="Symptoms:" style="-fx-font-weight: bold; -fx-text-fill: #ff4d4d;" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
                <Label text="Fever:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: #333333;"/>
                <ComboBox fx:id="feverCombo" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-background-color: #e6f7ff; -fx-border-color: #87ceeb;"/>
                <Label text="Cough:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill: #333333;"/>
                <ComboBox fx:id="coughCombo" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-background-color: #e6f7ff; -fx-border-color: #87ceeb;"/>
                <Label text="Fatigue:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-text-fill: #333333;"/>
                <ComboBox fx:id="fatigueCombo" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-background-color: #e6f7ff; -fx-border-color: #87ceeb;"/>
                <Label text="Breathing Difficulty:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-text-fill: #333333;"/>
                <ComboBox fx:id="breathingCombo" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-background-color: #e6f7ff; -fx-border-color: #87ceeb;"/>

                <!-- Patient Profile Section -->
                <Label text="Patient Profile:" style="-fx-font-weight: bold; -fx-text-fill: #ff4d4d;" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
                <Label text="Age Group:" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-text-fill: #333333;"/>
                <ComboBox fx:id="ageCombo" GridPane.rowIndex="6" GridPane.columnIndex="1" style="-fx-background-color: #e6f7ff; -fx-border-color: #87ceeb;"/>
                <Label text="Gender:" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-text-fill: #333333;"/>
                <ComboBox fx:id="genderCombo" GridPane.rowIndex="7" GridPane.columnIndex="1" style="-fx-background-color: #e6f7ff; -fx-border-color: #87ceeb;"/>
                <Label text="Blood Pressure:" GridPane.rowIndex="8" GridPane.columnIndex="0" style="-fx-text-fill: #333333;"/>
                <ComboBox fx:id="bpCombo" GridPane.rowIndex="8" GridPane.columnIndex="1" style="-fx-background-color: #e6f7ff; -fx-border-color: #87ceeb;"/>
                <Label text="Cholesterol Level:" GridPane.rowIndex="9" GridPane.columnIndex="0" style="-fx-text-fill: #333333;"/>
                <ComboBox fx:id="cholesterolCombo" GridPane.rowIndex="9" GridPane.columnIndex="1" style="-fx-background-color: #e6f7ff; -fx-border-color: #87ceeb;"/>
            </GridPane>

            <!-- Calculate Button -->
            <Button fx:id="calculateButton" text="Calculate Prediction" onAction="#calculate"
                    style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-background-color: #ff4d4d; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 25 8 25;"/>

            <!-- Result Display -->
            <Label fx:id="result" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ff4d4d; -fx-background-color: #e6f7ff; -fx-border-color: #87ceeb; -fx-border-radius: 5; -fx-border-width: 1;"
                   wrapText="true" maxWidth="600" textAlignment="CENTER">
                <padding>
                    <Insets top="10" bottom="10" left="20" right="20"/>
                </padding>
            </Label>

            <!-- History Section -->
            <Label text="Prediction History:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ff4d4d;"/>
            <TableView fx:id="historyTable" prefHeight="200" style="-fx-border-color: #ff4d4d; -fx-border-radius: 5; -fx-border-width: 1;">
                <columns>
                    <TableColumn fx:id="timeColumn" text="Time" prefWidth="150" style="-fx-background-color: #ffcccc;"/>
                    <TableColumn fx:id="diseaseColumn" text="Disease" prefWidth="200" style="-fx-background-color: #ffcccc;"/>
                    <TableColumn fx:id="confidenceColumn" text="Confidence (%)" prefWidth="100" style="-fx-background-color: #ffcccc;"/>
                    <TableColumn fx:id="symptomsColumn" text="Symptoms Used" prefWidth="250" style="-fx-background-color: #ffcccc;"/>
                </columns>
            </TableView>
        </VBox>
    </ScrollPane>
    <Button text="Back" onAction="#goToFront"
            style="-fx-background-color: #87CEEB; -fx-text-fill: white;"/>
</AnchorPane>